{
  "name": "lawfully-dumbo",
  "version": "1.0.0",
  "description": "A document-based chatbot application with admin interface and shareable chat URLs",
  "main": "server/index.js",
  "scripts": {
    "predev": "lsof -ti:3000,5001 | xargs kill -9 || true",
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"blue.bold,green.bold\" --prefix \"[{name}]\" --names \"SERVER,CLIENT\" \"npm run server\" \"npm run client\"",
    "server": "cd server && PORT=5001 npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "prepare": "cd client && npm install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d client/build"
  },
  "keywords": [
    "chatbot",
    "document-qa",
    "openai",
    "react"
  ],
  "author": "Lawfully Dumbo",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.3.0"
  },
  "dependencies": {
    "openai": "^5.8.2",
    "formidable": "^3.5.1",
    "uuid": "^9.0.1"
  }
}
